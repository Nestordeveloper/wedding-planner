@model User;
@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<form asp-action="ProcessRegister" asp-controller="Home" method="post">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name:</label>
        <div class="col-sm-8">
            <input asp-for="FirstName" type="text" class="form-control">
        </div>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name:</label>
        <div class="col-sm-8">
            <input asp-for="LastName" type="text" class="form-control">
        </div>
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-4 col-form-label">Email:</label>
        <div class="col-sm-8">
            <input asp-for="Email" type="email" class="form-control">
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-4 col-form-label">Password:</label>
        <div class="col-sm-8">
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <label asp-for="PasswordConfirm" class="col-sm-4 col-form-label">PW Confirm:</label>
        <div class="col-sm-8">
            <input asp-for="PasswordConfirm" type="password" class="form-control">
        </div>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="d-flex justify-content-start">
        <button class="btn btnRegister">Register</button>
    </div>
</form>