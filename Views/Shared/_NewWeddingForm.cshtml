@model Wedding;
<div class="text-left">
    <h1>Plan a Wedding</h1>
</div>
<form asp-action="CreateWedding" asp-controller="Home" method="post">
    <div class="form-group col-4 mb-4">
        <label asp-for="WedderOne">Wedder One:</label>
        <input asp-for="WedderOne" type="text" class="form-control">
        <span asp-validation-for="WedderOne"></span>
    </div>
    <div class="form-group col-4 mb-4">
        <label asp-for="WedderTwo">Wedder Two:</label>
        <input asp-for="WedderTwo" type="text" class="form-control">
        <span asp-validation-for="WedderTwo"></span>
    </div>
    <div class="form-group col-4 mb-4">
        <label asp-for="WeddingDate">Date</label>
        <input asp-for="WeddingDate" type="date" class="form-control">
        <span asp-validation-for="WeddingDate"></span>
    </div>
    <div class="form-group col-4 mb-4">
        <label asp-for="WeddingAddress">Wedding Address:</label>
        <input asp-for="WeddingAddress" type="text" class="form-control">
        <span asp-validation-for="WeddingAddress"></span>
    </div>
    <div class="btnSubmit">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>